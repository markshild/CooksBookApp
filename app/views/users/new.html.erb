<h2>Sign Up</h2>

<%= render "layouts/errors" %>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>
  <label>
    Name
  </label>
    <input type="text" name="user[name]" value="">

    <label>
      Email
    </label>
    <input type="text" name="user[email]" value="">

  <label>
    Password
  </label>
    <input type="password" name="user[password]" value="">

    <label>
      Confirm Password
    </label>
    <input type="password" name="user[password_confirmation]" value="">

  <input type="submit" value="Sign Up">
</form>
