<h2><%= recipe.escape('title') %> </h2>
<% if (recipe._author) { %>
<h6>by <%= recipe._author.name %> </h6>
<% } %>

<div class="recipe-pic">
<img src="<%= recipe.get('picture_url') %>" width="100" alt="" />
</div>

<h5>Description</h4>
<p>
  <%= recipe.escape('description') %>
</p>

<h5>Servings: <%= recipe.get('servings') %> </h5>

<h5>Ingredients</h5>
<div id="ingredient">

</div>

<h5>Cooking Time: <%= recipe.get('cooking_time') %> minutes</h5>

<h5>Directions</h5>
<div id="direction">

</div>

<h5>Tags</h5>
<div id="tag">

</div>

<h5>Comments</h5>
<div id="comment">

</div>

<div id="comment-form">

</div>
<% if (recipe._author) { %>
  <% if (recipe._author.id === current_id) { %>
    <a href="#/recipes/<%= recipe.id %>/edit">Edit Recipe</a>
    <input type="button" class="delete" value="Delete Recipe">
  <% }; %>
<% }; %>
